{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "entityCode": {
      "type": "string",
      "maxLength": 3,
      "metadata": {
        "description": "Edenred entity code"
      }
    },
    "appName": {
      "type": "string",
      "metadata": {
        "description": "Application name"
      }
    },
    "environment": {
      "type": "string",
      "metadata": {
        "description": "Environment"
      },
      "allowedValues": [
        "DEV",
        "QA",
        "UAT",
        "STG",
        "PROD"
      ]
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location where resource will be deployed to"
      }
    },
    "region": {
      "type": "string",
      "defaultValue": "none",
      "minLength": 4,
      "maxLength": 5,
      "metadata": {
        "description": "Region code used in resource name when a resource is deployed in several regions."
      },
      "allowedValues": [
        "none",
        "use1",
        "use2",
        "usc1",
        "usnc1",
        "ussc1",
        "usw1",
        "usw2",
        "cae1",
        "cac1",
        "brs1",
        "eun1",
        "euwe",
        "frc1",
        "frs1",
        "ukw1",
        "uks1",
        "gec1",
        "gene1",
        "gen1",
        "gewc1",
        "swn1",
        "sww1",
        "nwe1",
        "nww1",
        "asse",
        "aue1",
        "ase1",
        "ause1",
        "auc1",
        "auc2",
        "che1",
        "chn1",
        "che2",
        "chn2",
        "inc1",
        "inw1",
        "ins1",
        "jae1",
        "koc1",
        "kos1",
        "saw1",
        "san1",
        "uaec1",
        "uaen1"
      ]
    },
    "skuName": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "metadata": {
        "description": "Feature tier."
      },
      "allowedValues": [
        "Standard_LRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Standard_ZRS",
        "Premium_LRS",
        "Premium_ZRS",
        "Standard_GZRS",
        "Standard_RAGZRS"
      ]
    },
    "networkRulesDefaultAction": {
      "type": "string",
      "defaultValue": "Allow",
      "metadata": {
        "description": "Specifies the default action of allow or deny when no other rules match. - Allow or Deny."
      },
      "allowedValues": [
        "Allow",
        "Deny"
      ]
    },
    "softDeleteEnabled": {
      "type": "bool",
      "defaultValue": false,
      "metadata": {
        "description": "Enable soft delete"
      }
    },
    "softDeleteDuration": {
      "type": "int",
      "defaultValue": 7,
      "metadata": {
        "description": "Soft delete duration"
      }
    }
  },
  "variables": {
    "environmentSuffix": "[if(equals(parameters('environment'), 'PROD'), 'p', if(equals(parameters('environment'), 'STG'), 's', if(equals(parameters('environment'), 'UAT'), 'a', if(equals(parameters('environment'), 'QA'), 'q','d'))))]",
    "regionSuffix": "[if(equals(parameters('region'), 'none'), '', parameters('region'))]",
    "storageName": "[concat(parameters('entityCode'), parameters('appName'),variables('regionSuffix'),'store',variables('environmentSuffix'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2018-07-01",
      "name": "[variables('storageName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('skuName')]"
      },
      "kind": "StorageV2",
      "properties": {
        "networkAcls": {
          "bypass": "AzureServices",         
          "defaultAction": "[parameters('networkRulesDefaultAction')]"
        },
        "supportsHttpsTrafficOnly": true,
        "encryption": {
          "services": {
            "file": {
              "enabled": true
            },
            "blob": {
              "enabled": true
            }
          },
          "keySource": "Microsoft.Storage"
        },
        "accessTier": "Hot"
      },
      "resources": [
        {
          "name": "default",
          "type": "blobServices",
          "apiVersion": "2018-07-01",
          "properties": {
            "defaultServiceVersion": "2019-02-02",
             "deleteRetentionPolicy": {
                    "enabled": "[parameters('softDeleteEnabled')]",
                    "days": "[parameters('softDeleteDuration')]"
             }
          },
          "dependsOn": ["[variables('storageName')]"]
        }
      ]
    }
  ],
  "outputs": {
    "name": {
      "type": "string",
      "value": "[variables('storageName')]"
    },
    "uri": {
      "type": "string",
      "value": "[reference(concat('Microsoft.Storage/storageAccounts/', variables('storageName')), providers('Microsoft.Storage', 'storageAccounts').apiVersions[0]).primaryEndpoints.blob]"
    }
  }
}
